FROM ubuntu:latest

RUN pacman -Syu --noconfirm \
    python2 \
    ipython2 \
    nmap \
    dsniff \
    netcat \
    tcpdump \
    python2-pip \
    wireshark-cli

COPY scapy-ssl_tls/ /tmp/
WORKDIR /tmp/
RUN ln -s /usr/bin/python2.7 /usr/bin/python
RUN pip2 install --requirement requirements.txt
RUN pip2 install futures
RUN python setup.py install
WORKDIR /root
